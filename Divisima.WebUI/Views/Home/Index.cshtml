@model HomeVM
<!-- Hero section -->
<section class="hero-section">
    <div class="hero-slider owl-carousel">
        @foreach (var item in Model.Slides)
        {
            <div class="hs-item set-bg" data-setbg="@item.Image">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-7 text-white">
                            <span>New Arrivals</span>
                            <h2>@item.Title</h2>
                            <p>@item.Description</p>
                            <a href="@item.Link" class="site-btn sb-line">DISCOVER</a>
                            <a href="@item.Link" class="site-btn sb-white">ADD TO CART</a>
                        </div>
                    </div>
                    <div class="offer-card text-white">
                        <span>from</span>
                        <h2>$@Convert.ToInt32(item.Price)</h2>
                        <p>SHOP NOW</p>
                    </div>
                </div>
            </div>
        }


    </div>
    <div class="container">
        <div class="slide-num-holder" id="snh-1"></div>
    </div>
</section>
<!-- Hero section end -->
<!-- Features section -->
<section class="features-section">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model.Pageies)
            {
                <div class="col-md-4 p-0 feature">
                    <div class="feature-inner">
                        <div class="feature-icon">
                            <img src="@item.Icon" alt="#">
                        </div>
                        <h2>@item.Name</h2>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- Features section end -->
<!-- letest product section -->
<section class="top-letest-product-section">
    <div class="container">
        <div class="section-title">
            <h2>LATEST PRODUCTS</h2>
        </div>
        <div class="product-slider owl-carousel">
            @foreach (var item in Model.Products)
            {
                <latesttproducts items-id="@item.ID" items-name="@item.Name" items-price="@item.Price" items-picture="@(item.ProductPictures.Any()?item.ProductPictures.FirstOrDefault().Path:"/img/nopicture.jpg")"></latesttproducts>

            }
        </div>

    </div>
</section>
<!-- letest product section end -->
<!-- Product filter section -->
<section class="product-filter-section">
    <div class="container">
        <div class="section-title">
            <h2>BROWSE TOP SELLING PRODUCTS</h2>
        </div>
        <ul class="product-filter-menu">

            <li><a href="#">TOPS</a></li>
            <li><a href="#">JUMPSUITS</a></li>
            <li><a href="#">LINGERIE</a></li>
            <li><a href="#">JEANS</a></li>
            <li><a href="#">DRESSES</a></li>
            <li><a href="#">COATS</a></li>
            <li><a href="#">JUMPERS</a></li>
            <li><a href="#">LEGGINGS</a></li>
        </ul>
        <div class="row">

            @foreach (var item in Model.BestSellerProducts)
            {
                <div class="col-lg-3 col-sm-6">
                    <latesttproducts items-id="@item.ID" items-name="@item.Name" items-price="@item.Price" items-picture="@(item.ProductPictures.Any()?item.ProductPictures.FirstOrDefault().Path:"/img/nopicture.jpg")"></latesttproducts>
                </div>
            }



        </div>
        <div class="text-center pt-5">
            <button class="site-btn sb-line sb-dark">LOAD MORE</button>
        </div>
    </div>
</section>
<!-- Product filter section end -->
<!-- Banner section -->
<section class="banner-section">
    <div class="container">
        <div class="banner set-bg" data-setbg="img/banner-bg.jpg">
            <div class="tag-new">NEW</div>
            <span>New Arrivals</span>
            <h2>STRIPED SHIRTS</h2>
            <a href="#" class="site-btn">SHOP NOW</a>
        </div>
    </div>
</section>
<!-- Banner section end  -->
